<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fond"
    tools:context=".InventaireActivity">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="341dp"
        android:layout_height="217dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@mipmap/nuaginvent" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@+id/retour2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/inventaire" />

    <Button
        android:id="@+id/utiliser1"
        android:layout_width="104dp"
        android:layout_height="26dp"
        android:layout_marginStart="36dp"
        android:background="@mipmap/bouton"
        android:fontFamily="@font/mineclicktexte"
        android:text="utiliser"
        android:textColor="#fff"
        android:textSize="10sp"
        android:visibility="invisible"
        android:onClick="utiliserPotion1"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nbpotion"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/utiliser2"
        android:layout_width="104dp"
        android:layout_height="26dp"
        android:layout_marginStart="36dp"
        android:background="@mipmap/bouton"
        android:fontFamily="@font/mineclicktexte"
        android:text="utiliser"
        android:textColor="#fff"
        android:textSize="10sp"
        android:onClick="utiliserPotion2"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nbpotion"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/utiliser3"
        android:layout_width="104dp"
        android:layout_height="26dp"
        android:layout_marginStart="36dp"
        android:background="@mipmap/bouton"
        android:fontFamily="@font/mineclicktexte"
        android:text="utiliser"
        android:textColor="#fff"
        android:textSize="10sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/nbpotion"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintVertical_bias="0.25" />

    <TextView
        android:id="@+id/nbpotion"
        android:layout_width="46dp"
        android:layout_height="49dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="70dp"
        android:fontFamily="@font/mineclicktexte"
        android:text="x0"
        android:textColor="#000"
        android:textSize="25sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="@+id/imageView9"
        app:layout_constraintTop_toBottomOf="@+id/description"
        app:layout_constraintVertical_bias="0.138" />

    <TextView
        android:id="@+id/description"
        android:layout_width="228dp"
        android:layout_height="59dp"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/mineclicktexte"
        android:gravity="center"
        android:text="Bienvenue dans votre inventaire..."
        android:textColor="#000"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView9" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="25dp"
        android:onClick="utiliserPotion1"
        app:layout_constraintBottom_toTopOf="@+id/retour2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@mipmap/inventaire" />

    <ImageView
        android:id="@+id/potion1"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="80dp"
        android:onClick="onClickPotion1"
        android:contentDescription="@string/potion1"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:srcCompat="@mipmap/potion_force" />

    <ImageView
        android:id="@+id/potion2"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="80dp"
        android:onClick="onClickPotion2"
        android:contentDescription="@string/potion1"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:srcCompat="@mipmap/potion_heal" />

    <ImageView
        android:id="@+id/potion3"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="236dp"
        android:layout_marginTop="80dp"
        android:onClick="onClickPotion3"
        android:contentDescription="@string/potion1"
        app:layout_constraintStart_toStartOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:srcCompat="@mipmap/potion_auto" />

    <Button
        android:id="@+id/retour2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="20dp"
        android:background="@mipmap/bouton"
        android:fontFamily="@font/mineclicktexte"
        android:onClick="onClickRetour"
        android:text="@string/retour"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>